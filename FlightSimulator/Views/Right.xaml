<UserControl x:Class="FlightSimulator.Views.Right"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Height="450" Width="400">
    <Grid>
       
        <Viewbox >
            <TabControl>
                <TabItem Header="Manual" FontSize ="20" Padding="3"  FontFamily="Segoe UI Black"  >
                    <local:Manual></local:Manual>
                </TabItem>
                <TabItem Header="Auto Pilot" FontSize ="20"  Padding="3" FontFamily="Segoe UI Black" >
                    <local:Auto_Pilot></local:Auto_Pilot>
                </TabItem>
            </TabControl>
        </Viewbox>
    </Grid>
</UserControl>
