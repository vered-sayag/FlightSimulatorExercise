<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        xmlns:local1="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" MinHeight="250" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
        <TextBlock Text="Flight Simulator" 
            HorizontalAlignment="Center"   Margin="3"
                   Padding ="3" FontSize ="30" FontWeight="ExtraBlack" Foreground="DarkBlue" FontFamily="Cooper Black" />
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="0" >
            <local1:Left/>
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="1" >
            <local1:Right Padding="5" />
        </Viewbox>
      
    </Grid>
</Window>
