<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Flight Simulator" Margin="4" FontSize="30"
            HorizontalAlignment="Center"/>
        <Canvas>
            <Button x:Name="ButConnect" Canvas.Left="100" Canvas.Top="50"
                Content="Connect" Padding="1" FontSize="18">
            </Button>
            <Button x:Name="ButSettings" Canvas.Left="200" Canvas.Top="50"
                Content="Settings" Padding="1" FontSize="18">
            </Button>
        </Canvas>
    </Grid>
</Window>
